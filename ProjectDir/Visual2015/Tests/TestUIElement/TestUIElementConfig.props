<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="..\..\Paths.props" />
  
  <PropertyGroup Label="UserMacros">
    <TestUIElementName>TestUIElement</TestUIElementName>
    <TestUIElementLibDir>$(LibDir)$(TestUIElementName)\</TestUIElementLibDir>
    <TestUIElementSourceDir>$(SourceDir)$(TestUIElementName)\</TestUIElementSourceDir>
    <TestUIElementFileName>$(TestUIElementName)_$(Configuration)_$(PlatformShortName)_$(PlatformToolset)</TestUIElementFileName>
    <TestUIElementBuildDir>$(BuildDir)$(TestUIElementName)_$(Configuration)_$(PlatformShortName)_$(PlatformToolset)\</TestUIElementBuildDir>
  </PropertyGroup>
  
  <PropertyGroup>
    <IntDir>$(TestUIElementBuildDir)</IntDir>
    <TargetName>$(TestUIElementFileName)</TargetName>
    <OutDir>$(TestUIElementLibDir)</OutDir>
  </PropertyGroup>

</Project>